    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Guns (Standard)",
            "program": "${workspaceFolder}/src/main.ts",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "args": [
                "--output-file",
                "--ranges",
                "reference"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Grenades",
            "program": "${workspaceFolder}/src/main.ts",
            "outFiles": [
                "${workspaceFolder}/out/**/*.js"
            ],
            "args": [
                "grenades"
            ]
        }
    ]
}